generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Channel {
  id          Int    @id @default(autoincrement())
  title       String
  description String
  link        String
  feedLink    String @unique
  language    String
  items       Item[]
}

model Item {
  guid        String   @id
  title       String
  description String
  link        String
  pubDate     DateTime
  imageUrl    String?
  channel     Channel? @relation(fields: [channelId], references: [id])
  channelId   Int?
}
